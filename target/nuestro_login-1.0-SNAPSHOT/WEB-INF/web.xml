<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>procesarRegistros</servlet-name>
        <servlet-class>controladores.procesarRegistros</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registro2</servlet-name>
        <servlet-class>controladores.registro2</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>validarUsuario</servlet-name>
        <servlet-class>controladores.validarUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidarUsuarioServlet</servlet-name>
        <servlet-class>controladores.ValidarUsuarioServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>procesarRegistros</servlet-name>
        <url-pattern>/procesarRegistros</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registro2</servlet-name>
        <url-pattern>/registro2</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>validarUsuario</servlet-name>
        <url-pattern>/validarUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidarUsuarioServlet</servlet-name>
        <url-pattern>/ValidarUsuarioServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
